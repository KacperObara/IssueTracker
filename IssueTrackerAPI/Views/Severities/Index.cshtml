@model IEnumerable<IssueTrackerAPI.Models.Severity>

@{
    ViewData["Title"] = "Severities";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SeverityName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SeverityName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SeverityId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SeverityId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SeverityId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
